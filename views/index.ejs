
<%- include('./partials/header') %>
	<!-- main Content Starts -->
	<% if(users) { %>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Age</th>
				<th>Department</th>
				<th>Role</th>
				<th>Status</th>
				<th>Actions</th>
			</tr>
		</thead>
		
		<tbody>
			<% users.forEach(function(user, index) { %>
				<tr>
					<td><%= index+1 %></td>
					<td><%= user.name %></td>
					<td><%= user.age %></td>
					<td><%= user.department %></td>
					<td><%= user.role %></td>
					<td><%= user.status %></td>
					<td>
						<a href="/edit/<%= user.id %>" class="edit"><i class="material-icons" title="Edit">&#xE254;</i></a>
						<a href="/delete/<%=  user.id %>" class="delete"><i class="material-icons" onclick="return confirm('Are you sure?')" title="Delete">&#xE872;</i></a>
					</td>
				</tr>
			<% }) %>
			
		</tbody>
	</table>
	<% } %> 
	<!-- main Content Ends -->

<%- include('./partials/footer') %>

